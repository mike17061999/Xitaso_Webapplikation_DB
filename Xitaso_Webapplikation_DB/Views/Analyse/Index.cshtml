    questions_dict.Add("Indivdualisierbarkeit", valSetOne);
    questions_dict.Add("Fehlertoleranz", valSetOne);
    questions_dict.Add("Aufgabenangemessenheit", valSetOne);
    questions_dict.Add("Steuerbarkeit", valSetOne);

